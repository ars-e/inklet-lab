{% set nextProject = collections.projects | getNextCollectionItem(page) %}
{% set previousProject = collections.projects | getPreviousCollectionItem(page) %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mango Metrics — PETI [पेटी] — Inklet Lab</title>
    
    <script src="https://cdn-tailwindcss.vercel.app/"></script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Hind:wght@700&family=IBM+Plex+Mono:wght@400;700&family=Playfair+Display:wght@700&family=Noto+Nastaliq+Urdu:wght@700&family=VT323&family=Libre+Barcode+39+Text&family=Teko:wght@700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/case-study.css">

</head>

<body class="font-mono antialiased text-ink">

    <div class="cursor-dot"></div>

    <!-- Consistent Vertical Navigation -->
    <nav class="vertical-nav">
        <div class="nav-qr" aria-hidden="true"></div>
        <ul class="vertical-nav-list">
            <li><a href="#" class="nav-code">FRONT PAGE</a></li>
            <li><a href="#" class="nav-code">THE DISPATCH</a></li>
            <li><a href="/peti.html" class="nav-pill active">PETI</a></li>
            <li><a href="#" class="nav-code">The Balcony</a></li>
            <li><a href="#" class="nav-code">Dump & Discover</a></li>
            <li><a href="#" class="nav-code">ETCETRA</a></li>
            <li><a href="#" class="nav-code">THE POINT</a></li>
        </ul>
        <div class="nav-barcode" aria-hidden="true"></div>
        <span class="bulb" style="top:20%"></span>
        <span class="bulb" style="top:50%"></span>
        <span class="bulb" style="top:80%"></span>
    </nav>
    
    <div class="main-content-wrapper">
        <header class="w-full p-4 md:p-8">
            <div class="dossier-header">
                <div class="dossier-title-section">
                    <div class="dossier-id">
                        <span>CASE FILE</span>
                        <span class="font-barcode">*{{ card_id }}*</span>
                    </div>
                    <h1 class="font-display text-7xl md:text-8xl uppercase tracking-tight text-ink leading-none">{{ title }}</h1>
                    <p class="dossier-subtitle">{{ dek }}</p>
                </div>
                <div class="dossier-meta-grid">
                    <div class="meta-item">
                        <span class="meta-label">Client</span>
                        <span class="meta-value">{{ client }}</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Services</span>
                        <span class="meta-value">{{ services | join(", ") }}</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Year</span>
                        <span class="meta-value">{{ year }}</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Status</span>
                        <span class="meta-value status-chip">{{ status }}</span>
                    </div>
                </div>
            </div>
        </header>

        <main>
            <section class="hero-image-container">
                <figure class="stylized-frame">
                    <img src="{{ image }}" alt="{{ image_alt }}" class="stylized-image">
                    <figcaption class="font-pixel">{{ image_caption }}</figcaption>
                </figure>
            </section>
            
            <!-- Main Content Grid -->
            <div class="content-grid">
                <article class="content-main">
                    {{ content | safe }}
                </article>

                <aside class="content-sidebar">
                    
                    <div class="sidebar-box toc-wrapper">
                        <h3 class="sidebar-title">On This Page</h3>
                        <ul id="case-study-toc" class="toc-links">
                                </ul>
                    </div>

                    <div class="sidebar-box">
                        <h3 class="sidebar-title">Project Toolkit</h3>
                        <ul class="toolkit-list">
                            {% for item in toolkit %}
                            <li><span>{{ item.label }}:</span> {{ item.value }}</li>
                            {% endfor %}
                        </ul>    
                    </div>

                </aside>
            </div>

            <!-- Pagination -->
            <nav class="project-pagination">
    {# Show the 'Previous' link only if there is a previous project #}
    {% if previousProject %}
        <a href="{{ previousProject.url }}" class="pagination-link prev">
            <span class="arrow">&lt;</span>
            <span class="text">
                <span class="label">Previous Project</span>
                <span class="title">{{ previousProject.data.title }}</span>
            </span>
        </a>
    {% else %}
        <div class="pagination-link prev"></div>
    {% endif %}

    {# Show the 'Next' link only if there is a next project #}
    {% if nextProject %}
        <a href="{{ nextProject.url }}" class="pagination-link next">
             <span class="text">
                <span class="label">Next Project</span>
                <span class="title">{{ nextProject.data.title }}</span>
            </span>
            <span class="arrow">&gt;</span>
        </a>
    {% endif %}
</nav>

        </main>

        <!-- Consistent Footer -->
        <footer class="site-footer">
            <div class="footer-content-wrapper">
                <div class="footer-grid">
                    <div>
                        <h3 class="footer-brand-title">INKLET LAB</h3>
                        <p class="footer-brand-tagline">A DESIGN & CODE PRACTICE</p>
                        <p class="font-barcode footer-brand-barcode">*INKLET-LAB-2025*</p>
                    </div>
                    <div>
                        <h4 class="footer-heading">MANIFEST</h4>
                        <ul class="footer-link-list">
                            <li><a href="#">> Front Page (Home)</a></li>
                            <li><a href="#">> All Projects & Cases</a></li>
                            <li><a href="#">> The Dispatch (Blog)</a></li>
                            <li><a href="#">> About & Contact</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4 class="footer-heading">DISPATCH</h4>
                        <ul class="footer-link-list">
                            <li><a href="#" target="_blank">> Twitter / X</a></li>
                            <li><a href="#" target="_blank">> Instagram</a></li>
                            <li><a href="#" target="_blank">> Read.cv</a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>&copy; <span id="footer-year">2025</span> INKLET LAB // ALL RIGHTS RESERVED // HYDERABAD, IN</p>
                    <div class="footer-stamp">
                        <p>QUALITY INSPECTED: #2025-FIN</p>
                    </div>
                </div>
            </div>
        </footer>

    </div>

  <script src="/js/case-study.js" defer></script>

</body>
</html>

